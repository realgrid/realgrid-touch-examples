{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@templates/*": ["components/templates/*"],
      "@molecules/*": ["components/molecules/*"],
      "@atoms/*": ["components/atoms/*"],
    }
  },
  "include": ["src"]
}
